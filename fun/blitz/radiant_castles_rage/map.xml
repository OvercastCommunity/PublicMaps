<map proto="1.5.0">
<name>Radiant Castles: Rage</name>
<version>1.0.4</version>
<objective>Eliminate the opposing team!</objective>
<gamemode>br</gamemode>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="ff0b4c92-edc5-4474-a145-04a433c9e485"/> <!-- MySquishyTurtle -->
    <author uuid="8f9344cf-7367-4e28-9f24-5c66422f28c9"/> <!-- Timothee38 -->
</authors>
<teams>
    <team id="red" color="dark red" max="16" max-overfill="20">Red</team>
    <team id="blue" color="blue" max="16" max-overfill="20">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" enchantment="damage all:10" material="iron sword"/>
        <item slot="1" enchantment="arrow damage:10" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="3" material="arrow"/>
        <helmet unbreakable="true" locked="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" locked="true" material="gold chestplate"/>
        <leggings unbreakable="true" locked="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" locked="true" team-color="true" material="leather boots"/>
        <!-- Potion of instant health II  -->
        <effect duration="2">heal</effect>
        <effect duration="5">damage resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="spawn-kit">
        <region>
            <point>256.5,16,-200.5</point>
        </region>
    </spawn>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="180">
            <point>142.5,16,-200.5</point>
        </region>
    </spawn>
    <default>
        <region>
            <point>199.5,45,-200.5</point>
        </region>
    </default>
</spawns>
<regions>
    <apply block="never"/>
</regions>
<time>6m</time>
<blitz>
    <lives>1</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
<rage/>
<toolrepair>
    <tool>bow</tool>
    <tool>iron sword</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>gold chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
    <item>golden carrot</item>
</itemremove>
<kill-rewards>
    <kill-reward>
        <item material="arrow"/>
    </kill-reward>
</kill-rewards>
<respawn auto="true"/>
</map>
