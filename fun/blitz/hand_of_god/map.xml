<map proto="1.5.0">
<name>Hand of God</name>
<variant id="halloween" world="halloween" override="true">Hand of Lucifer</variant>
<version>1.3.0</version>
<if variant="default">
    <created>2015-03-16</created>
</if>
<if variant="halloween">
    <created>2015-10-02</created>
</if>
<objective>Eliminate the other team!</objective>
<gamemode>br</gamemode>
<authors>
    <author uuid="e79fbdc9-627e-4dac-97a6-81a3046220d7"/> <!-- AtlasGames -->
</authors>
<teams>
   <team id="red" color="red" max="10" max-overfill="12">Red</team>
   <team id="blue" color="blue" max="10" max-overfill="12">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" enchantment="damage all:10" material="iron sword"/>
        <item slot="1" enchantment="arrow damage:10" material="bow"/>
        <item slot="2" material="arrow"/>
        <item slot="3" amount="4" material="bread"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <effect duration="5" amplifier="25">heal</effect>
        <effect duration="5" amplifier="25">damage resistance</effect>
        <effect>speed</effect>
        <effect>jump</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="red-kit" parents="spawn-kit">
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <boots color="334CB2" unbreakable="true" material="leather boots"/>
    </kit>
    <kit id="kill" force="true">
        <effect duration="15" amplifier="25">harm</effect>
        <effect duration="15" amplifier="5">blindness</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="red-kit">
        <region yaw="180">
            <point>0.5,79,32.5</point>
        </region>
    </spawn>
    <spawn team="blue" kit="blue-kit">
        <region>
            <point>0.5,79,-31.5</point>
        </region>
    </spawn>
    <default>
        <region yaw="-90">
            <point>0.5,72,0.5</point>
        </region>
    </default>
</spawns>
<filters>
    <material id="only-beacon">beacon</material>
</filters>
<regions>
    <apply block="never" use="deny(only-beacon)"/>
    <apply kit="kill">
        <region>
            <below y="55"/>
        </region>
    </apply>
    <if variant="halloween">
        <apply velocity="0,0.7,4">
            <region>
                <block>-21,75,-12</block>
            </region>
        </apply>
        <apply velocity="0,0.7,-4">
            <region>
                <block>21,75,12</block>
            </region>
        </apply>
    </if>
</regions>
<time>5m</time>
<blitz>
    <lives>2</lives>
</blitz>
<rage/>
<itemremove>
    <item>bread</item>
    <item>cooked fish</item>
    <item>arrow</item>
    <item>bow</item>
    <item>leather chestplate</item>
    <item>leather boots</item>
</itemremove>
<kill-rewards>
    <kill-reward>
        <item material="arrow"/>
    </kill-reward>
</kill-rewards>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<timelock>on</timelock>
<respawn auto="true" delay="3s"/>
</map>
