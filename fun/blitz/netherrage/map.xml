</authors>
<rage/>
<time>4m</time>
<hunger>
    <depletion>off</depletion>
</hunger>
<blitz>
    <lives>2</lives>
</blitz>
<respawn auto="true"/>
<teams>
    <team id="ghast-team" color="white" max="12" max-overfill="16">Ghast</team>
    <team id="blaze-team" color="yellow" max="12" max-overfill="16">Blaze</team>
    <team id="skele-team" color="gray" max="12" max-overfill="16">Nether Skeleton</team>
    <team id="magma-team" color="dark red" max="12" max-overfill="16">Magma Cube</team>
</teams>
<spawns>
    <spawn team="ghast-team" kit="ghast-kit">
        <regions>
            <point yaw="135">37.5,10,80.5</point>
        </regions>
    </spawn>
    <spawn team="blaze-team" kit="blaze-kit">
        <regions>
            <point yaw="-135">-117.5,10,29.5</point>
        </regions>
    </spawn>
    <spawn team="skele-team" kit="skele-kit">
        <regions>
            <point yaw="-45">-66.5,10,-125.5</point>
        </regions>
    </spawn>
    <spawn team="magma-team" kit="magma-kit">
        <regions>
            <point yaw="45">88.5,10,-74.5</point>
        </regions>
    </spawn>
    <default>
        <regions>
            <point yaw="90">-12.5,31,-22.5</point>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="spawn">
        <effect>speed</effect>
        <item slot="0" enchantment="damage all:10" unbreakable="true" material="iron sword"/>
        <item slot="1" enchantment="arrow damage:10" unbreakable="true" material="bow"/>
        <item slot="2" amount="2" material="arrow"/>
