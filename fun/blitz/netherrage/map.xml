<blitz>
    <lives>2</lives>
</blitz>
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>leather helmet</item>
</itemremove>
<itemkeep>
    <item>nether star</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="arrow"/>
        <item material="nether star"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<respawn auto="true"/>
