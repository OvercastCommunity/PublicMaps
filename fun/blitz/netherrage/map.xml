<spawns>
    <spawn team="ghast-team" kit="spawn-kit">
        <region yaw="135">
            <point>37.5,10,80.5</point>
        </region>
    </spawn>
    <spawn team="blaze-team" kit="spawn-kit">
        <region yaw="-135">
            <point>-117.5,10,29.5</point>
        </region>
    </spawn>
    <spawn team="skele-team" kit="spawn-kit">
        <region yaw="-45">
            <point>-66.5,10,-125.5</point>
        </region>
    </spawn>
    <spawn team="magma-team" kit="spawn-kit">
        <region yaw="45">
            <point>88.5,10,-74.5</point>
        </region>
    </spawn>
    <default>
        <region yaw="90">
            <point>-12.5,31,-22.5</point>
        </region>
    </default>
</spawns>
<regions>
    <apply block="never"/>
</regions>
<rage/>
