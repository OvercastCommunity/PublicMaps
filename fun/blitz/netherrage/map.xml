        <leggings color="191919" unbreakable="true" material="leather leggings"/>
        <boots color="191919" unbreakable="true" material="leather boots"/>
    </kit>
    <kit id="ghast-kit" parent="spawn">
        <helmet color="FFFFFF" unbreakable="true" material="leather helmet"/>
    </kit>
    <kit id="blaze-kit" parent="spawn">
        <helmet color="E5E533" unbreakable="true" material="leather helmet"/>
    </kit>
    <kit id="skele-kit" parent="spawn">
        <helmet color="4C4C4C" unbreakable="true" material="leather helmet"/>
    </kit>
    <kit id="magma-kit" parent="spawn">
        <helmet color="B24CD8" unbreakable="true" material="leather helmet"/>
    </kit>
</kits>
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>leather helmet</item>
</itemremove>
<itemkeep>
    <item>nether star</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="arrow"/>
        <item material="nether star"/>
    </kill-reward>
</kill-rewards>
<regions>
    <apply block="never" />
</regions>
