<?xml version="1.0"?>
<map proto="1.3.0">
<name>Creeper Return</name>
<phase>development</phase>
<version>2.1.5</version>
<objective>Eliminate the other team.</objective>
<authors>
    <author>AntonyMo</author>
</authors>
<contributors>
    <contributor contribution="Feedback and Minor Aesthetics">Stealth5061</contributor>
</contributors>
<rules>
   <rule>You may not access areas where the lava cannot flow (apart from the center).</rule>
</rules>
<teams>
    <team color="dark purple" max="20">Purple</team>
    <team color="blue" max="20">Blue</team>
</teams>
<blitz>
    <time>5m</time>
    <lives>1</lives>
</blitz>
<timelock>on</timelock>
<spawns>
    <spawn team="purple" kit="purple" yaw="180">
        <cuboid min="18,18,55" max="-17,18,53"/>
    </spawn>
    <spawn team="blue" kit="blue" yaw="0">
        <cuboid min="18,18,-53" max="-17,18,-55"/>
    </spawn>
    <default yaw="270">
        <cylinder base="51,35,0" radius="2" height="0"/>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0" enchantment="arrow damage:1;arrow infinite:1;damage all:2;knockback:2">bow</item>
        <item slot="27">arrow</item>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate color="0066cc">leather chestplate</chestplate>
        <leggings color="0066cc">leather leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
    <kit name="purple" parents="spawn">
        <helmet color="cc00ff">leather helmet</helmet>
        <chestplate color="cc00ff">leather chestplate</chestplate>
        <leggings color="cc00ff">leather leggings</leggings>
        <boots color="cc00ff">leather boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
</itemremove>
<filters>
    <filter name="allow-lava">
        <any>
            <block>lava</block>
            <block>stationary lava</block>
        </any>
    </filter>
</filters>
<regions>
<apply block="allow-lava" use="allow-lava">
    <rectangle min="-oo,-oo" max="oo,oo"/>
</apply>
</regions>
<hunger>
    <depletion>off</depletion>
</hunger>
<mobs>
    <filter>
        <mob>creeper</mob>
    </filter>
</mobs>
<modifybowprojectile>
    <projectile>Creeper</projectile>
    <velocityMod>40</velocityMod>
</modifybowprojectile>
<!-- include src="blitz-global.xml"/ -->
</map>
