        <regions yaw="-90">
            <block>15.5,36,12.5</block>
        </regions>
    </spawn>
    <spawn team="defenders" kit="defenders-kit">
        <regions yaw="-90">
            <block>19.5,45,-13.5</block>
            <block>19.5,45,37.5</block>
        </regions>
    </spawn>
    <default>
        <regions yaw="-90">
            <block>20.5,73.5,12.5</block>
        </regions>
    </default>
</spawns>
<time result="defenders">5m</time>
