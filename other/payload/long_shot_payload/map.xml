</regions>
<payloads radius="6" capture-time="5m" decay-rate="0.25" contested-rate="0.75" capture-rule="exclusive" points="1">
    <payload location="99.5,60,-21.5" name="Blue Payload" capture-filter="only-blue"/>
    <payload location="99.5,60,22.5" name="Red Payload" capture-filter="only-red"/> 
</payloads>
<score>
    <limit>1</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>stone sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>arrow</item>
    <item>wood</item>
    <item>stained clay</item>
    <item>water bucket</item>
    <item>bucket</item>
    <item>golden apple</item>
    <item>fireball</item>
    <item>tnt</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    </kill-reward>
    <kill-reward>
        <item amount="4" team-color="true" material="stained clay"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="2" repeat="true"/>
        </filter>
        <item amount="5" material="fireball"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="5" repeat="true"/>
        </filter>
        <item amount="5" material="tnt"/>
    </kill-reward>
</kill-rewards>
<tnt>
    <instantignite>on</instantignite>
</tnt>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>