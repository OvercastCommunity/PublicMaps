<map proto="1.5">
<!-- version 1.0.0 -->
<teams>
    <team id="blue-team" color="blue" max="8">Blue</team>
    <team id="green-team" color="green" max="8">Green</team>
    <team id="red-team" color="red" max="8">Red</team>
    <team id="yellow-team" color="yellow" max="8">Yellow</team>
</teams>
<time>170s</time>
<broadcasts>
    <alert after="1s">`cEliminate the other teams before the time runs out! Watch out for the shrinking world border!</alert>
    <alert after="10s">`cThe walls have fallen. Take cover or attack!</alert>
    <alert after="145s">`c20 seconds remaining!</alert>
    <alert after="155s">`c10 seconds remaining!</alert>
</broadcasts>
<blitz>
    <lives>1</lives>
</blitz>
<constants fallback="true">
    <constant id="resistance-time">0</constant>
</constants>
<kits>
    <kit id="spawn-kit">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="stone pickaxe"/>
        <item slot="3" unbreakable="true" material="stone axe"/>
        <item slot="4" unbreakable="true" material="stone spade"/>
        <item slot="8" amount="8" material="apple"/>
        <item slot="28" amount="8" material="arrow"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
		<leggings unbreakable="true" locked="true" material="chainmail leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
		<effect duration="${resistance-time}">resistance</effect>
	</kit>
</kits>
<filters>
    <all id="not-glass">
        <not>
            <material>glass</material>
        </not>
    </all>
</filters>
<regions>
    <cuboid id="floor" min="27,0,27" max="30,25,30"/>
    <union id="walls">
        <cuboid id="first-wall" min="1,6,-29" max="-1,14,29"/>
        <cuboid id="second-wall" min="-29,6,-1" max="29,14,1"/>
    </union>
    <negative id="not-map">
        <cylinder id="map" base="0.5,0,0.5" radius="27.5" height="25"/>
    </negative>
    <apply region="map" block="not-glass" message="You cannot break the walls."/>
    <apply region="not-map" block="never" message="You cannot build outside of the map."/>
</regions>
<actions>
    <action id="walls-falling" scope="match">
        <fill id="walls-air" region="walls" material="air"/>
    </action>
    <trigger action="walls-falling" scope="match">
        <filter>
            <time>10s</time>
        </filter>
    </trigger>
</actions>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>stone pickaxe</item>
    <item>stone axe</item>
    <item>stone spade</item>
    <item>apple</item>
    <item>arrow</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<block-drops>
    <rule>
        <filter>
            <any>
                <material>double_step</material>
            </any>
        </filter>
        <drops>
            <item>cobblestone</item>
        </drops>
    </rule>
</block-drops>
<kill-rewards>
    <kill-reward>
        <item amount="6" material="arrow"/>
    </kill-reward>
</kill-rewards>
<world-borders center="0.5,0.5">
    <world-border size="80"/>
    <world-border size="0" after="0s" duration="160s" damage="5" buffer="0"/>
</world-borders>
<maxbuildheight>25</maxbuildheight>
</map>	