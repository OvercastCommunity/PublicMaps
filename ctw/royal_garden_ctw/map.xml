<map proto="1.5.0">
<name>Royal Garden CTW</name>
<version>1.6.11</version>
<include id="gapple-kill-reward"/>
<objective>Capture the opposing team's wools and place them at your victory monuments.</objective>
<authors>
    <author uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- thestrangeboy1 -->
</authors>
<teams>
    <team id="blue-team" color="blue" max="40">Blue</team>
    <team id="red-team" color="dark red" max="40">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" damage="2" material="wood"/>
        <item slot="31" amount="64" damage="2" material="wood"/>
        <item slot="5" amount="64" material="glass"/>
        <item slot="6" amount="32" material="ladder"/>
        <item slot="33" amount="12" material="water lily"/>
        <item slot="8" material="golden apple"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="8s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="180">
            <cylinder base="15.5,43,75.5" radius="1" height="0"/>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <region yaw="-90">
            <cylinder base="-136.5,18,25.5" radius="3" height="0"/>
        </region>
    </spawn>
    <spawn team="red-team" kit="spawn-kit">
        <region yaw="90">
            <cylinder base="167.5,18,25.5" radius="3" height="0"/>
        </region>
    </spawn>
</spawns>
<filters>
    <deny id="deny-beacon">
        <material>beacon</material>
    </deny>
    <deny id="deny-in-wr">
        <any>
            <material>chest</material>
            <material>mob spawner</material>
        </any>
    </deny>
    <after id="add-water-lane" duration="300s" message="`eWater lanes will be added in {0}">
        <time>55m</time>
    </after>
    <material id="only-iron">iron block</material>
    <material id="only-air">air</material>
    <deny id="deny-water-flow">
        <all>
            <any>
                <material>water</material>
                <material>stationary water</material>
            </any>
            <cause>world</cause>
        </all>
    </deny>
</filters>
<regions>
    <union id="spawns">
        <union id="blue-spawn">
            <rectangle min="-89,38" max="-109,13"/>
            <rectangle min="-146,59" max="-109,-8"/>
        </union>
        <union id="red-spawn">
            <rectangle min="120,38" max="140,13"/>
            <rectangle min="177,59" max="140,-8"/>
        </union>
    </union>
    <union id="wool-rooms">
        <union id="blue-wool-rooms"> <!-- red defends, blue must get -->
            <cuboid id="orange-wr" min="63,23,-29" max="77,45,-42"/>
            <cuboid id="purple-wr" min="63,23,93" max="77,45,80"/>
        </union>
        <union id="red-wool-rooms"> <!-- blue defends, red must get -->
            <cuboid id="pink-wr" min="-32,23,80" max="-46,45,93"/>
            <cuboid id="yellow-wr" min="-32,23,-29" max="-46,45,-42"/>
        </union>
    </union>
    <union id="water-lanes">
        <union id="red-lanes">
            <cuboid id="red-left" min="63,0,80" max="92,3,44"/>
            <cuboid id="red-right" min="63,0,-29" max="92,3,7"/>
        </union>
        <union id="blue-lanes">
            <cuboid id="blue-left" min="-32,0,-29" max="-61,3,7"/>
            <cuboid id="blue-right" min="-32,0,80" max="-61,3,44"/>
        </union>
    </union>
    <complement id="non-bridge">
        <everywhere/>
        <rectangle min="29,54" max="2,-3"/>
    </complement>
    <apply use="deny-beacon"/>
    <apply enter="blue-team" region="blue-spawn" message="You may not enter the enemy's base!"/>
    <apply enter="red-team" region="red-spawn" message="You may not enter the enemy's base!"/>
    <apply enter="blue-team" region="blue-wool-rooms" message="You may not enter your own wool rooms!"/>
    <apply enter="red-team" region="red-wool-rooms" message="You may not enter your own wool rooms!"/>
    <apply block-break="only-iron" block-place="never" region="spawns" message="You may only break iron blocks in spawn!"/>
    <apply block="deny-in-wr" region="wool-rooms" message="You may not break or place this block in the wool rooms!"/>
    <apply block="deny(blue-team)" region="red-wool-rooms" message="You may not interfere with your team's wool rooms!"/>
    <apply block="deny(red-team)" region="blue-wool-rooms" message="You may not interfere with your team's wool rooms!"/>
    <apply block="deny-water-flow" region="wool-rooms"/>
    <apply block="add-water-lane" region="water-lanes"/>
    <apply block="deny(void)" region="non-bridge" message="You may not build in the void!"/>
</regions>
<wools craftable="false" wool-proximity-metric="none" monument-proximity-metric="closest block">
    <wool team="blue-team" color="orange" location="68,23,-36">
        <monument>
            <block>-143,18,23</block>
        </monument>
    </wool>
    <wool team="blue-team" color="purple" location="68,23,86">
        <monument>
            <block>-143,18,27</block>
        </monument>
    </wool>
    <wool team="red-team" color="pink" location="-38,23,86">
        <monument>
            <block>173,18,27</block>
        </monument>
    </wool>
    <wool team="red-team" color="yellow" location="-38,23,-36">
        <monument>
            <block>173,18,23</block>
        </monument>
    </wool>
</wools>
<actions>
    <trigger scope="match" filter="add-water-lane">
        <action>
            <fill region="water-lanes" material="water" filter="only-air"/>
        </action>
    </trigger>
</actions>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>smooth stairs</item>
    <item>smooth brick</item>
    <item>brown mushroom</item>
    <item>sugar cane</item>
    <item>red rose</item>
    <item>clay ball</item>
    <item>sign</item>
    <item>beacon</item>
    <item>yellow flower</item>
    <item>red rose</item>
    <item>long grass</item>
    <item>double plant</item>
    <item>water lily</item>
</itemremove>
<block-drops>
    <rule>
        <filter>
            <any>
                <material>wood</material>
                <material>glass</material>
                <material>ladder</material>
            </any>
        </filter>
        <drops>
            <item chance="0" material="glass"/>
        </drops>
    </rule>
</block-drops>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>iron spade</item>
    <item>arrow</item>
    <item>wood</item>
    <item>glass</item>
    <item>ladder</item>
    <item>golden apple</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="24" damage="2" material="wood"/>
        <item amount="12" material="glass"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>45</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
