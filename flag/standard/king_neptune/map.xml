<map proto="1.4.2">
<name>King Neptune</name>
<version>1.1.1</version>
<gamemode>kotf</gamemode>
<objective>Gain 120 points to win!</objective>
<created>2020-03-09</created>
<authors>
    <author uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- Strangey -->
</authors>
<teams>
    <team id="blue" color="blue" max="6">Blue</team>
    <team id="red" color="dark red" max="6">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="12" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="2">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="1s" amplifier="0">health boost</effect>
        <effect duration="2s" amplifier="10">regeneration</effect>
        <effect duration="3s" amplifier="255">resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="flag-kit" force="true">
        <effect amplifier="-3">health boost</effect>
        <effect duration="3s" amplifier="2">absorption</effect>
    </kit>
    <kit id="reset-health" force="true">
        <effect duration="0s" amplifier="0">health boost</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="0">
            <point>40.5,15,40.5</point>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit" filter="has-flag">
        <region yaw="90">
            <point>66.5,6,40.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit" filter="has-flag">
        <region yaw="-90">
            <point>14.5,6,40.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <any id="has-flag">
        <carrying-flag>flag</carrying-flag>
        <not>
            <same-team>
                <carrying-flag>flag</carrying-flag>
            </same-team>
        </not>
    </any>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="64,36" max="69,45"/>
        <rectangle id="red-spawn" min="17,45" max="12,36"/>
    </union>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy's spawn!"/>
    <apply block="never" use="never"/>
</regions>
<spawners>
    <spawner delay="8s" max-entities="1">
        <spawn-region>
            <point>40.5,9.2,40.5</point>
        </spawn-region>
        <player-region>
            <cylinder base="40.5,8,40.5" height="4" radius="2"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<flags>
    <flag id="flag"
          name="Flag"
          color="purple"
          shared="true"
          points-rate="1"
          pickup-kit="flag-kit"
          drop-kit="reset-health"
          flag-proximity-metric="none"
          show-respawn-on-pickup="true">
        <post return-time="0s" respawn-time="15s">
            <post name="North Post" yaw="0">40.5,8,28.5</post>
            <post name="South Post" yaw="180">40.5,8,52.5</post>
        </post>
    </flag>
</flags>
<score>
    <limit>120</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>banner</item>
</itemremove>
<itemkeep>
    <item>stone sword</item>
    <item>bow</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item amount="6" material="arrow"/>
    </kill-reward>
</kill-rewards>
<respawn delay="3.5s" spectate="true" auto="true">
    <message>
        {"translate":"death.respawn.confirmed.waiting.flagDropped"}
    </message>
</respawn>
<hunger>
    <depletion>off</depletion>
</hunger>
<!-- <maptags>
    <maptag>#mmc4</maptag>
</maptags> -->
</map>
