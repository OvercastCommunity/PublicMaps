<map proto="1.4.2">
<name>Yangshuo</name>
<version>1.1</version>
<objective>Destroy both of the enemy's monuments!</objective>
<created>2013-08-21</created>
<maxbuildheight>112</maxbuildheight>
<constants>
    <constant id="map-origin">29,0,45</constant>
</constants>
<authors>
    <author uuid="62b6d081-8df8-4c09-aa15-71141ca7df76"/> <!-- Arzanex -->
</authors>
<contributors>
    <contributor uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="XML"/> <!-- zzuf -->
</contributors>
<teams>
    <team id="blue" color="blue" max="16">Blue</team>
    <team id="red" color="dark red" max="16">Red</team>
</teams>
<spawns>
    <default>
        <region yaw="180">
            <point>29,117,124</point>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="-45">
            <point>-57.5,88,9.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="45">
            <point>115.5,88,10.5</point>
        </region>
    </spawn>
</spawns>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="28" amount="64" material="arrow"/>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="3" unbreakable="true" material="iron axe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="31" amount="64" material="wood"/>
        <item slot="5" amount="32" material="glass"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" amount="64" damage="1" material="cooked fish"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate">
            <enchantment level="2">projectile_protection</enchantment>
        </chestplate>
        <leggings unbreakable="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
    </kit>
</kits>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-51,21" max="-64,0"/>
        <mirror id="red-spawn" region="blue-spawn" origin="${map-origin}" normal="1,0,0"/>
    </union>
    <complement id="not-build-area">
        <negative>
            <complement id="build-area">
                <rectangle min="154,95" max="-96,-5"/>
                <region id="spawns"/>
            </complement>
        </negative>
        <region id="spawns"/>
    </complement>
    <apply enter="only-blue" message="You may not enter the enemy spawn!" region="blue-spawn"/>
    <apply enter="only-red" message="You may not enter the enemy spawn!" region="red-spawn"/>
    <apply block="never" message="You may not modify the spawn areas!" region="spawns"/>
    <apply block="never" message="You may not edit the void!" region="not-build-area"/>
    <!-- Monuments -->
    <cuboid id="blue-hillside-mon" min="-87,99,12" size="1,2,1"/>
    <cuboid id="blue-riverplains-mon" min="-43,84,46" size="1,2,1"/>
    <mirror id="red-hillside-mon" region="blue-hillside-mon" origin="${map-origin}" normal="1,0,0"/>
    <mirror id="red-riverplains-mon" region="blue-riverplains-mon" origin="${map-origin}" normal="1,0,0"/>
</regions>
<destroyables materials="obsidian" completion="100%" mode-changes="true">
    <destroyable owner="blue" name="Hillside Monument" region="blue-hillside-mon"/>
    <destroyable owner="blue" name="River Plains Monument" region="blue-riverplains-mon"/>
    <destroyable owner="red" name="Hillside Monument" region="red-hillside-mon"/>
    <destroyable owner="red" name="River Plains Monument" region="red-riverplains-mon"/>
</destroyables>
<modes>
    <mode after="15m" material="beacon" name="`bBEACON MONUMENT MODE"/>
    <mode after="30m" material="coal block" name="`8COAL MONUMENT MODE"/>
</modes>
<item-mods>
    <rule>
        <match>
            <material>iron helmet</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
    <rule>
        <match>
            <material>iron chestplate</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
    <rule>
        <match>
            <material>iron leggings</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
    <rule>
        <match>
            <material>iron boots</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
</item-mods>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemkeep>
    <item>wood</item>
    <item>leaves</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<itemremove>
    <item>cooked fish</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>obsidian</item>
    <item>beacon</item>
    <item>coal block</item>
    <item>flint</item>
    <item>seeds</item>
    <item>sapling</item>
    <item>wheat</item>
</itemremove>
<kill-reward>
    <item material="golden apple"/>
    <item amount="32" material="wood"/>
    <item amount="16" material="glass"/>
    <item amount="16" material="arrow"/>
</kill-reward>
</map>
