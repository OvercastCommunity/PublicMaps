<cores material="obsidian" leak="5">
    <core team="red">
        <region>
            <cuboid min="182,19,388" max="176,10,394"/>
        </region>
    </core>
    <core team="blue">
        <region>
            <cuboid min="50,19,388" max="44,10,394"/>
        </region>
    </core>
</cores>
<!-- Normal rewards, every kill -->
<kill-rewards>
    <kill-reward>
        <filter>
            <kill-streak count="1" repeat="true"/>
        </filter>
        <kit>
            <effect duration="3">night vision</effect>
        </kit>
        <item material="golden apple"/>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>glass</item>
    <item>wood</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
    <item>baked potato</item>
</itemremove>
<item-mods>
    <rule>
        <match>
            <material>leather chestplate</material>
        </match>
        <modify>
            <attribute operation="multiply" amount="0.1">generic.movementSpeed</attribute>
        </modify>
    </rule>
    <rule>
        <match>
            <material>leather boots</material>
        </match>
        <modify>
            <attribute operation="multiply" amount="0.1">generic.movementSpeed</attribute>
        </modify>
    </rule>
</item-mods>
<maxbuildheight>29</maxbuildheight>
<hunger>
    <depletion>on</depletion>
</hunger>
<timelock>on</timelock>
</map>
