<?xml version="1.0"?>
<map proto="1.3.0">
<include src="tutorial.xml"/>
<name>Fort Wars</name>
<version>1.4.5</version>
<objective>Destroy the enemy's flag!</objective>
<rules>
    <rule>Players have resistance and reduced knockback in spawn!</rule>
    <rule>Chests can not be placed or destroyed!</rule>
</rules>
<authors>
    <author uuid="5bd4f5c6-f60c-44b1-9c37-c27a7db35ec6"/> <!-- whiskers434 -->
</authors>
<contributors>
    <contributor uuid="82c796a5-c033-43be-af30-fa06496995f9" contribution="Fix some stuff."/> <!-- IM_A_H0B0 -->
</contributors>
<teams>
    <team color="dark red" max="32">Red</team>
    <team color="blue" max="32">Blue</team>
</teams>
<kits>
    <kit name="spawn-protection">
        <potion amplifier="10" duration="oo">damage resistance</potion>
        <knockback-reduction>1</knockback-reduction>
    </kit>
    <kit name="spawn">
        <item slot="0">diamond sword</item>
        <item slot="1">bow</item>
        <item slot="28" amount="64">arrow</item>
        <item slot="2">diamond pickaxe</item>
        <item slot="3">diamond axe</item>
        <item slot="30">diamond spade</item>
        <item slot="4" amount="64">wood</item>
        <item slot="5" amount="64">ladder</item>
        <item slot="6">water bucket</item>
        <item slot="8" amount="64">apple</item>
        <chestplate enchantment="protection explosions:4">chainmail chestplate</chestplate>
        <effect duration="30" amplifier="2">regeneration</effect>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <leggings color="cd0000">leather leggings</leggings>
        <boots color="cd0000">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <leggings color="0066cc">leather leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
</kits>
<crafting>
    <disable>chest</disable>
</crafting>
<killreward>
    <item amount="16">arrow</item>
</killreward>
<toolrepair>
    <tool>diamond sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>diamond axe</tool>
    <tool>diamond spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>obsidian</item>
    <item>arrow</item>
    <item>wood</item>
    <item>apple</item>
    <item>coal</item>
    <item>ladder</item>
    <item>bucket</item>
    <item>water bucket</item>
    <item>golden apple</item>
</itemremove>
<spawns>
    <spawn team="red" kit="red" safe="true" yaw="0">
        <point>-151.5,38,-141.5</point>
    </spawn>
    <spawn team="blue" kit="blue" safe="true" yaw="180">
        <point>-151.5,38,-165.5</point>
    </spawn>
    <default yaw="90">
        <cylinder base="-152,38,-154" radius="4" height="0"/>
    </default>
</spawns>
<filters>
    <!-- Recent changes to implement spawn and chest protection -->
    <filter name="deny-chest-break">
        <deny>
            <block>chest</block>
        </deny>
    </filter>
    <!-- Line where recent changes end -->
    <filter name="only-blue">
        <team>blue</team>
    </filter>
    <filter name="only-red">
        <team>red</team>
    </filter>
    <filter name="blue-base-tnt">
        <any>
            <not>
                <all>
                    <team>blue</team>
                    <block>tnt</block>
                </all>
            </not>
            <team>red</team>
        </any>
    </filter>
    <filter name="red-base-tnt">
        <any>
            <not>
                <all>
                    <team>red</team>
                    <block>tnt</block>
                </all>
            </not>
            <team>blue</team>
        </any>
    </filter>
</filters>
<regions>
    <!-- Recent changes to implement spawn and chest protection -->
    <cuboid name="red-spawn-protect" min="-70,6,-59" max="-63,11,-42"/>
    <cuboid name="blue-spawn-protect" min="-63,11,-265" max="-70,6,-248"/>
    <apply lend-kit="spawn-protection" filter="only-blue">
       <region name="blue-spawn-protect"/>
    </apply>
    <apply lend-kit="spawn-protection" filter="only-red">
        <region name="red-spawn-protect"/>
    </apply>
    <!--
    <apply block="deny-chest-break" message="This block can not be placed or broken on this map!">
        <rectangle min="oo,oo" max="-oo,-oo"/>
    </apply> -->
    <!-- Line where recent changes end -->
    <apply block="deny-all" message="You may not build outside the playable region!">
    <negative name="playable-inverse">
        <rectangle min="-16,-254" max="-117,-53"/>
    </negative>
    </apply>
    <apply enter="only-blue">
        <cuboid min="-62,8,-254" max="-71,13,-253"/>
    </apply>
    <apply enter="only-red">
        <cuboid min="-71,8,-54" max="-62,13,-53"/>
    </apply>
    <apply block="deny-all">
        <cuboid min="-117,1,-254" max="-16,2,-198"/>
        <cuboid min="-117,1,-109" max="-16,2,-53"/>
    </apply>
    <apply block-place="red-base-tnt" message="You may not place TNT in your own base!">
        <rectangle min="-88,-96" max="-45,-53"/>
    </apply>
    <apply block-place="blue-base-tnt" message="You may not place TNT in your own base!">
        <rectangle min="-88,-254" max="-45,-211"/>
    </apply>
    <apply enter="deny-all" message="`eYou may not enter the observers spawn!">
        <rectangle min="-162,-164" max="-141,-143"/>
    </apply>
</regions>
<destroyables name="Flag" completion="100%" materials="wool:14;wool:11;wool:15">
    <destroyable owner="blue">
        <cuboid min="-72,36,-233" max="-62,24,-232"/>
    </destroyable>
    <destroyable owner="red">
        <cuboid min="-61,36,-74" max="-71,24,-75"/>
    </destroyable>
</destroyables>
<tutorial>
    <stage title="Fort Wars">
        <message>
            <line>This is Fort Wars, `aDestroy the Monument (DTM) `rmap.</line>
            <line>The objective is to destroy the other team's `bflag`r, on the top of their `bcastle`r.</line>
        </message>
        <teleport>
            <point yaw="-70" pitch="10">-144,60,-203</point>
        </teleport>
    </stage>
    <stage title="Supplies">
        <message>
            <line>This is the `bsupply room`r.</line>
            <line>It gets blown up easily, `cbe careful`r!</line>
            <line>It has everything you need to go into battle.</line>
        </message>
        <teleport>
            <point yaw="0">-66.5,8,-238</point>
        </teleport>
    </stage>
    <stage title="The Flag">
        <message>
            <line>This is the `bflag`r. If it gets `cdestroyed`r, the other team wins.</line>
        </message>
        <teleport>
            <point yaw="140" pitch="10">-54,35,-218</point>
        </teleport>
    </stage>
    <stage title="The Blimp">
        <message>
            <line>This is the `bblimp`r.</line>
            <line>It has ready-made TNT cannons aimed at the flag.</line>
            <line>It also has some hidden goodies at it's center.</line>
        </message>
        <teleport>
            <point yaw="-90">-121.5,55,-152</point>
        </teleport>
    </stage>
</tutorial>
<killreward>
    <item>golden apple</item>
</killreward>
</map>
