        <region>
            <region id="bases"/>
            <region id="platforms"/>
        </region>
    </apply>
    <apply enter="only-red" message="`aYou may not enter the enemy's base area!">
        <region>
            <region id="red-base"/>
            <region id="red-platform"/>
        </region>
    </apply>
    <apply enter="only-purple" message="`aYou may not enter the enemy's base area!">
